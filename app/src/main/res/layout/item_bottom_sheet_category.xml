<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itembottomsheetcategory"
            type="com.example.project_auction.data.BottomSheetRecyclerDTO" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/item_bottom_sheet_category_imageview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="8dp"
            />

        <TextView
            app:layout_constraintTop_toTopOf="@+id/item_bottom_sheet_category_imageview"
            app:layout_constraintBottom_toBottomOf="@+id/item_bottom_sheet_category_imageview"
            app:layout_constraintLeft_toRightOf="@+id/item_bottom_sheet_category_imageview"
            android:id="@+id/item_bottom_sheet_category_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>