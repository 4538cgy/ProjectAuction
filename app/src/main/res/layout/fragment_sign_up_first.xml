<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.signup.SignUpFirstFragment">

    <data>
        <variable
            name="fragmentsignupfirst"
            type="com.example.project_auction.view.fragment.signup.SignUpFirstFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:id="@+id/fragment_sign_up_first_button_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="80dp"
            android:background="@drawable/background_circle_white_stroke_black"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintRight_toRightOf="@+id/fragment_sign_up_first_button_profile"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_sign_up_first_button_profile"
            app:layout_constraintTop_toTopOf="@+id/fragment_sign_up_first_button_profile"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_sign_up_first_button_profile"
            android:src="@drawable/ic_baseline_add_24"
            />

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_first_button_profile"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_sign_up_first_button_profile"
            app:layout_constraintRight_toRightOf="@+id/fragment_sign_up_first_button_profile"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 를 눌러 프로필 사진을 등록해주세요."
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>