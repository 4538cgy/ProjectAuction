<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/alertdialog_textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:text="프로필 편집"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/alertdialog_edittext_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:padding="5dp"
        android:hint="변경할 닉네임을 입력해주세요."
        android:maxLength="8"
        android:maxLines="1"
        android:background="@drawable/background_round_white_stroke_black_2dp"
        app:layout_constraintTop_toBottomOf="@+id/alertdialog_textview_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:imeOptions="actionDone"/>

</androidx.constraintlayout.widget.ConstraintLayout>
