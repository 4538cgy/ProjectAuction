<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bottomsheetdialogsetcloseproduct"
            type="com.example.project_auction.view.bottomsheet.BottomSheetSetCloseProduct" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/bottom_sheet_dialog_setcloseproduct_edittext_day"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="4"
            android:maxLength="2"
            android:textColor="@color/colorBlack"
            android:textSize="24dp"
            android:inputType="number"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="일"
            android:textColor="@color/colorBlack"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_sheet_dialog_setcloseproduct_edittext_day"
            app:layout_constraintLeft_toRightOf="@+id/bottom_sheet_dialog_setcloseproduct_edittext_day"
            app:layout_constraintTop_toTopOf="@+id/bottom_sheet_dialog_setcloseproduct_edittext_day" />

        <Button
            android:id="@+id/bottom_sheet_dialog_setcloseproduct_button_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/background_round_yellow_24dp"
            android:text="입력"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_dialog_setcloseproduct_edittext_day"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>